fzf-z-search() {
  type fzf z > /dev/null
  if [ $? -ne 0 ]; then
    echo "Please install fzf and z"
    return 1
  fi
  local dir=$(z | sort -rn | cut -c 12- | fzf)
  if [ -n "${dir}" ]; then
    cd "${dir}"
    return
  else
    return 1
  fi
}
bind -x '"\C-f": fzf-z-search'

# unalias z
# z() {
j() {
  if [[ -z "$*" ]]; then
    cd "$(_z -l 2>&1 | fzf +s --tac | sed 's/^[0-9,.]* *//')"
  else
    _last_z_args="$@"
    _z "$@"
  fi
}

jj() {
  cd "$(_z -l 2>&1 | sed 's/^[0-9,.]* *//' | fzf -q "$_last_z_args")"
}

